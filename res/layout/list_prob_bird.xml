<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name of the Bird"
            android:id="@+id/list_txt_NameBird" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:textStyle="bold" android:layout_margin="4dp" android:textColor="#ff555555"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/list_img_Bird" android:layout_below="@+id/list_txt_NameBird"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_margin="4dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="See More..."
            android:id="@+id/BtnInfo" android:layout_below="@+id/list_img_Bird" android:layout_alignParentLeft="true"
            android:background="@drawable/button_resize"
            android:textSize="18dp" android:layout_toLeftOf="@+id/textView10" android:layout_margin="4dp"
            android:visibility="gone"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_BtnCall"
            android:background="@drawable/play"
            android:layout_below="@+id/list_img_Bird" android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/BtnInfo" android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bird\nCall"
            android:id="@+id/textView10"
            android:lines="2"
            android:layout_toLeftOf="@+id/list_BtnCall"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp" android:textIsSelectable="false" android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_alignTop="@+id/list_BtnCall" android:layout_alignBottom="@+id/list_BtnCall"
            android:visibility="gone"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is My Bird !!"
            android:id="@+id/list_BtnSelectThis"
            android:background="@drawable/button_resize"
            android:layout_alignBottom="@+id/textView10" android:layout_alignRight="@+id/list_img_Bird"
            android:visibility="gone"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar3"
                android:layout_below="@+id/BtnInfo" android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" android:layout_margin="4dp"/>
</RelativeLayout>